{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ author.biography }}</td>
            </tr>
            <tr>
                <th>Author_picture</th>
                <td>{{ author.authorPicture }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ author.birthDate ? author.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ author.nationality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
