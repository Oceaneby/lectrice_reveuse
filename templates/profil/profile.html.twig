{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 py-10">
    <!-- Titre principal centré -->
    <h1 class="text-3xl font-semibold mb-6 text-center">Mon profil</h1>

    <!-- Photo de profil et informations personnelles -->
    <div class="flex flex-col items-center justify-center mb-6">
        {% if app.user.profilPicture | length > 0 %}
            <img src="{{ asset('uploads/profil_pictures/' ~ app.user.profilPicture[0].getImageUrl) }}" alt="Photo de profil" class="w-32 h-32 rounded-full object-cover mb-4">
        {% else %}
            <div class="w-32 h-32 rounded-full bg-gray-300 flex items-center justify-center text-white text-xl font-semibold mb-4">
                <span>Aucune</span>
            </div>
        {% endif %}

        <h2 class="text-2xl font-medium mb-4">Mes informations personnelles</h2>
        <p class="text-lg text-gray-700">{{ app.user.username }}</p>
    </div>

    <div class="text-center mt-6">
        <a href="{{ path('profile_edit') }}" class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition duration-200 ease-in-out">
            Modifier le profil
        </a>
    </div>

    <!-- Section des étagères de livres -->
    <div class="relative mt-8">
        <h2 class="text-2xl font-semibold mb-4 text-center">Mes étagères de livres</h2>

        <!-- Grille des étagères -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 relative z-10">
            {% for bookshelf in app.user.bookshelves %}
                <div class="relative rounded-lg shadow-xl overflow-hidden group transform transition-all hover:scale-105 hover:shadow-2xl duration-300 p-4"
                    style="background-image: url('{{ asset('images/bookshelves.png') }}'); background-size: cover; background-position: center; min-height: 500px;">
                    <!-- Nom de l'étagère -->
                    <h3 class="text-xl font-semibold text-center mb-4">{{ bookshelf.shelfName }}</h3>
                    <!-- Si aucun livre n'est dans l'étagère, afficher un message -->
                    {% if bookshelf.books is empty %}
                        <p class="text-gray-600 text-center">Aucun livre dans cette étagère pour le moment.</p>
                    {% endif %}

                    <!-- Liste des livres dans l'étagère avec défilement si nécessaire -->
                    <div class="flex flex-wrap justify-start space-x-3 max-h-[500px] overflow-y-auto absolute" style="top: 100px; left: 30px;">
                        {% for book in bookshelf.books %}
                            <div class="relative top-1 mb-4">
                                <!-- Couverture de chaque livre -->
                                <div class="rounded-lg p-2 transform transition-all hover:scale-105">
                                    <img src="{{ asset('uploads/book_cover/' ~ book.coverImage) }}" alt="{{ book.title }}" class="w-24 h-32 object-cover rounded-lg mb-2">
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <p class="text-gray-600">Aucune étagère pour le moment.</p>
            {% endfor %}
        </div>
    </div>

    <!-- Section des 5 derniers commentaires -->
    <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4 text-center">Mes 5 derniers commentaires</h2>
        <a href="{{ path('profile_edit_reviews') }}" class="inline-block px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition duration-200 ease-in-out">
            Modifier mes commentaires
        </a>

        {% if app.user.reviews is not empty %}
            <div class="space-y-6 mt-6">
                {% for review in app.user.reviews|sort((a, b) => b.getReviewDate() <=> a.getReviewDate())|slice(0, 5) %}
                    <div class="bg-gray-50 p-4 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                        <div class="flex items-center space-x-4">
                            <!-- Photo de livre et titre -->
                            <img src="{{ asset('uploads/book_cover/' ~ review.book.coverImage) }}" alt="{{ review.book.title }}" class="w-16 h-24 object-cover rounded-lg">
                            <div>
                                <p class="font-semibold text-gray-800">{{ review.book.title }}</p>
                                <p class="text-sm text-gray-600">{{ review.reviewText|slice(0, 100) }}...</p>
                                <p class="text-sm text-gray-500 mt-2">{{ review.getReviewDate()|date('d/m/Y H:i') }}</p>

                                <!-- Affichage des étoiles pour la note -->
                                <div class="flex items-center mt-2">
                                    {% for i in 1..5 %}
                                        <i class="fa{{ i <= review.rating ? 's' : 'r' }} fa-star text-yellow-500"></i>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-600 text-center">Vous n'avez pas encore écrit de commentaires.</p>
        {% endif %}
    </div>
</div>
{% endblock %}