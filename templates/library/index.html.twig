{% extends 'base.html.twig' %}

{% block title %}Ma bibliothèque{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-6 py-12">
        <h1 class="text-4xl font-bold text-center text-indigo-600 mb-12">Ma bibliothèque</h1>

        {# Ajouter le bouton "Ajouter une étagère" ici #}
        <div class="text-center mb-6">
            <a href="{{ path('app_library_create_shelf') }}" class="bg-green-600 text-white rounded-lg py-2 px-6 transition hover:bg-green-700">Ajouter une étagère</a>
        </div>

        {% if library.bookshelves is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for bookshelf in library.bookshelves %}
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden group hover:scale-105 transition-transform duration-300">
                        <div class="bg-indigo-500 text-white p-6">
                            <h2 class="text-2xl font-semibold">{{ bookshelf.shelfName }}</h2>
                        </div>
                        <div class="p-6">
                            <ul class="space-y-4">
                                {% for book in bookshelf.books %}
                                    <li class="flex items-center space-x-4">
                                        <img src="{{ asset('uploads/book_cover/' ~ book.coverImage) }}" alt="Cover image" class="w-24 h-32 object-cover rounded-lg shadow-md" />
                                        <div class="flex flex-col">
                                            <h3 class="text-lg font-semibold text-gray-800">{{ book.title }}</h3>
                                            <p class="text-sm text-gray-600">Auteur : {{ book.author.fullName }}</p>

                                            {# Affichage des genres du livre (plusieurs genres possibles) #}
                                            <p class="text-sm text-gray-500">Genres : 
                                                {% for genre in book.genres %}
                                                    <span>{{ genre.name }}</span>{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                            </p>
                                        </div>

                                        {# Formulaire pour supprimer le livre de l'étagère #}
                                        <form action="{{ path('app_library_remove_from_shelf', {bookId: book.id, shelfId: bookshelf.id}) }}" method="post">
                                            <button type="submit" class="bg-red-600 text-white rounded-lg py-2 px-4 transition hover:bg-red-700">Retirer de l'étagère</button>
                                        </form>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-600">Aucune étagère dans votre bibliothèque.</p>
        {% endif %}

        <h2 class="text-2xl font-semibold text-center text-indigo-600 mt-12 mb-6">Livres non assignés à une étagère</h2>

        {% set booksWithoutBookshelf = [] %}
        {% for book in library.books %}
            {% if book.bookshelves is empty %}
                {% set booksWithoutBookshelf = booksWithoutBookshelf|merge([book]) %}
            {% endif %}
        {% endfor %}

        {% if booksWithoutBookshelf is not empty %}
            <div class="bg-white rounded-lg shadow-lg p-6">
                <ul class="space-y-4">
                    {% for book in booksWithoutBookshelf %}
                        <li class="flex items-center space-x-4">
                            <img src="{{ asset('uploads/book_cover/' ~ book.coverImage) }}" alt="Cover image" class="w-24 h-32 object-cover rounded-lg shadow-md" />
                            <div class="flex flex-col">
                                <h3 class="text-lg font-semibold text-gray-800">{{ book.title }}</h3>
                                <p class="text-sm text-gray-600">Auteur : {{ book.author.fullName }}</p>

                                {# Affichage des genres du livre (plusieurs genres possibles) #}
                                <p class="text-sm text-gray-500">Genres : 
                                    {% for genre in book.genres %}
                                        <span>{{ genre.name }}</span>{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </p>

                                {# Formulaire pour ajouter le livre à une étagère #}
                                <form action="{{ path('app_library_add_to_shelf', {bookId: book.id}) }}" method="post" class="mt-4">
                                    <select name="shelfId" class="bg-indigo-100 border border-indigo-300 rounded-lg py-2 px-4 mb-2">
                                        {% for shelf in library.bookshelves %}
                                            <option value="{{ shelf.id }}">{{ shelf.shelfName }}</option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="bg-indigo-600 text-white rounded-lg py-2 px-4 transition hover:bg-indigo-700">Ajouter à l'étagère</button>
                                </form>

                                {# Formulaire pour supprimer le livre de la bibliothèque #}
                                <form action="{{ path('app_library_remove', {bookId: book.id}) }}" method="post" class="mt-4">
                                    <button type="submit" class="bg-red-600 text-white rounded-lg py-2 px-4 transition hover:bg-red-700">Supprimer de la bibliothèque</button>
                                </form>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <p class="text-center text-gray-600">Aucun livre n'est actuellement sans étagère.</p>
        {% endif %}
    </div>
{% endblock %}