{% extends 'base.html.twig' %}

{% block title %}Contactez-Nous{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto px-6 py-8 bg-white shadow-lg rounded-lg mt-12">
        <h1 class="text-4xl font-semibold text-center text-gray-800 mb-8">Nous contacter</h1>

        {% if app.flashes('success') %}
            <div class="alert alert-success mb-6 bg-green-100 text-green-700 p-4 rounded-lg shadow-md">
                {% for message in app.flashes('success') %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {{ form_start(form, { 'attr': {'class': 'space-y-6'} }) }}

        <div class="flex flex-col space-y-6">
            <div class="space-y-2">
                {{ form_label(form.email, null, {'attr': {'class': 'text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.email, {
                    'attr': {'class': 'p-4 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 w-full'}
                }) }}
            </div>

            <div class="space-y-2">
                {{ form_label(form.message, null, {'attr': {'class': 'text-lg font-medium text-gray-700'}}) }}
                {{ form_widget(form.message, {
                    'attr': {'class': 'p-4 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 h-40 w-full'}
                }) }}
            </div>

            <div>
                {{ form_widget(form.submit, {
                    'attr': {'class': 'w-full bg-indigo-600 text-white py-3 rounded-lg shadow-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50'}
                }) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}