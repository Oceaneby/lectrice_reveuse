						<a href="{{ path('app_library') }}" class="hover:text-pink-400 transition" role="menuitem" aria-label="Accéder à ma bibliothèque">Ma bibliothèque</a>
					{% endif %}
					<a href="{{ path('app_contact') }}" class="hover:text-pink-400 transition" role="menuitem" aria-label="Contactez-nous">Contact</a>
