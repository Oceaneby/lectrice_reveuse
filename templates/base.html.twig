						<a href="{{ path('app_logout') }}" class="bg-transparent border-2 border-pink-500 hover:bg-pink-500 hover:text-white text-pink-500 py-2 px-4 rounded-lg transition" aria-label="Se déconnecter">Se déconnecter</a>
					{% else %}
