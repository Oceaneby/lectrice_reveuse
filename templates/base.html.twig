						<a href="{{ path('admin') }}" class="hover:text-pink-400 transition" role="menuitem" aria-label="Accéder à l'administration">Admin</a>
					{% endif %}
				</div>
				<!-- Recherche -->
				<div class="relative hidden md:block" aria-labelledby="search-form">
					<form id="search-form" action="{{ path('app_book_index') }}" method="get" class="flex" onsubmit="event.preventDefault(); searchBooks();">
						<input type="text" id="search-input" name="query" placeholder="Recherche..." class="bg-gray-800 text-white px-4 py-2 rounded-l-lg focus:outline-none" oninput="searchBooks(event)" aria-label="Rechercher des livres">
						<button id="search-button" type="submit" class="bg-pink-700 text-white px-4 py-2 rounded-r-lg hover:bg-pink-800" aria-label="Lancer la recherche">Rechercher</button>
					</form>
					<div id="search-results" class="absolute top-0 left-0 w-full mt-10 bg-gray-800 text-white shadow-lg rounded-md z-10 hidden cursor-pointer" role="listbox" aria-label="Résultats de recherche"></div>
				</div>
				<div class="hidden md:flex items-center space-x-4">
