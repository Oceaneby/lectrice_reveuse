{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600">
    <section class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md" aria-labelledby="login-form-title">
        <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6" id="login-form-title">Veuillez vous connecter</h1>

        {% if error %}
            <div class="mb-4 text-red-500 text-center" role="alert" aria-live="assertive">
                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-4 text-center">
                <p class="text-gray-800">Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>, <a href="{{ path('app_logout') }}" class="text-blue-500 hover:underline">Se déconnecter</a></p>
            </div>
        {% endif %}

        <form method="post" aria-labelledby="login-form">
            <h2 class="sr-only" id="login-form">Formulaire de connexion</h2>

            <div class="mb-4">
                <label for="email" class="block text-gray-700 text-sm font-medium mb-2">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" autocomplete="email" required autofocus aria-describedby="email-help">
            </div>

            <div class="mb-4">
                <label for="password" class="block text-gray-700 text-sm font-medium mb-2">Mot de passe</label>
                <input type="password" name="password" id="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" autocomplete="current-password" required aria-describedby="password-help">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-4 text-center">
                <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all">
                    Se connecter
                </button>
            </div>
        </form>

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="mb-4 flex items-center">
            <input type="checkbox" name="_remember_me" id="_remember_me" class="mr-2">
            <label for="_remember_me" class="text-sm text-gray-700">Se souvenir de moi</label>
        </div>
        #}
    </section>
</div>
{% endblock %}