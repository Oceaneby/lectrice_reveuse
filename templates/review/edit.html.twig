{% extends 'base.html.twig' %}

{% block title %}Mes Commentaires{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-6 py-8">
        <!-- Titre principal -->
        <h1 class="text-3xl font-semibold text-gray-800 text-center mb-8">Mes commentaires</h1>

        <!-- Liste des commentaires -->
        <ul class="space-y-6">
            {% for review in reviews|sort((a, b) => b.getReviewDate() <=> a.getReviewDate()) %}
                <li id="review-{{ review.id }}" class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                    <!-- Titre du livre concerné -->
                    <div class="flex items-center mb-4">
                        <img src="{{ asset('uploads/book_cover/' ~ review.book.coverImage) }}" alt="{{ review.book.title }}" class="w-16 h-24 object-cover rounded-lg">
                        <div class="ml-4">
                            <p class="font-semibold text-lg text-gray-800">{{ review.book.title }}</p>
                            <p class="text-sm text-gray-500">
                                {% for author in review.book.getAuthors %}
                                    {{ author.firstName }} {{ author.lastName }}{% if not loop.last %}, {% endif %}
                                 {% endfor %}
                            </p>
                        </div>
                    </div>

                    <!-- Texte du commentaire -->
                    <p class="text-lg text-gray-700 mb-4">{{ review.reviewText }}</p>

                    <!-- Affichage des étoiles pour la note -->
                    <div class="flex items-center mb-4">
                        {% for i in 1..5 %}
                            <i class="fa{{ i <= review.rating ? 's' : 'r' }} fa-star text-yellow-500"></i>
                        {% endfor %}
                    </div>

                    <!-- Date de publication du commentaire -->
                    <p class="text-sm text-gray-500">{{ review.getReviewDate()|date('d/m/Y H:i') }}</p>

                    <!-- Lien pour modifier le commentaire -->
                    <a href="{{ path('profile_edit_review', {'id': review.id}) }}" class="text-blue-600 hover:underline mt-2 inline-block">
                        Modifier
                    </a>

                    <!-- Bouton pour supprimer le commentaire -->
                    {% if app.user == review.user %}
                                <button type="button" data-review-id="{{ review.id }}" data-csrf-token="{{ csrf_token('delete' ~ review.id) }}" class="delete-review text-red-500 hover:underline mt-2 inline-block">Supprimer</button>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}