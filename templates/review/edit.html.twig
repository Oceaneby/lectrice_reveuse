{% extends 'base.html.twig' %}

{% block title %}Mes Commentaires{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-6 py-8">
        <!-- Titre principal -->
        <h1 class="text-3xl font-semibold text-gray-800 text-center mb-8">Mes commentaires</h1>

        <!-- Liste des commentaires -->
        <ul class="space-y-6">
            {% for review in reviews %}
                <li class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                    <!-- Texte du commentaire -->
                    <p class="text-lg text-gray-700 mb-4">{{ review.reviewText }}</p>

                    <!-- Lien pour modifier le commentaire -->
                    <a href="{{ path('profile_edit_review', {'id': review.id}) }}" class="text-blue-600 hover:text-blue-800 font-semibold text-lg">
                        Modifier
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}